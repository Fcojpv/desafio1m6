<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title mb-4">Detalles de la Película</h2>

      <div class="mb-3">
        <strong>Nombre:</strong>
        <%= @movie.name %>
      </div>

      <div class="mb-3">
        <strong>Descripción:</strong>
        <%= @movie.description %>
      </div>

      <div class="mb-3">
        <strong>Cliente Asignado:</strong>
        <%= @movie.client ? @movie.client.name : "Sin asignar" %>
      </div>

      <div class="mt-4">
        <%= link_to "Editar", edit_movie_path(@movie), class: "btn btn-warning" %>
        <%= link_to "Volver", movies_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
