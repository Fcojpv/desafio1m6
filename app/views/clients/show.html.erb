<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title mb-4">Detalles del Cliente</h2>

      <div class="mb-3">
        <strong>Nombre:</strong>
        <%= @client.name %>
      </div>

      <div class="mb-3">
        <strong>Email:</strong>
        <%= @client.email %>
      </div>

      <div class="mb-3">
        <strong>Pel√≠cula Arrendada:</strong>
        <%= @client.movie ? @client.movie.name : "Sin arriendos" %>
      </div>

      <div class="mt-4">
        <%= link_to "Editar", edit_client_path(@client), class: "btn btn-warning" %>
        <%= link_to "Volver", clients_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
